<% layout('layouts/boilerplate') %> 
    <h1 class="text-center">What to cook today?</h1>
    <div class='container-fluid mt-5'>
        <% for (let recipe of recipes){ %>
            <div class="card mb-3" >
                <div class="row">
                    <div class="col-md-4">
                        <img class="img-fluid" alt="" src='<%= recipe.image %>'>
                    </div>
                    <div class="col-md-8">
                        <div class="card-body">
                            <h5 class="card-title"><%=recipe.name%></h5>
                            <p class="card-text"><%=recipe.description%></p>
                            <a class="btn btn-light" href="recipes/<%=recipe.id%>">View Recipe</a>
                        </div>
                    </div>
                </div>
            </div>
        <%} %>   
    </div>
    
 